*{margin: 0;padding: 0;}
body{
    font-size: 16px;
    font-family: "Microsoft YaHei", sans-serif;
    color: #3e3e3e;
}
h2{
    font-size: 26px;
    line-height: 24px;
    font-weight: normal;
}
h1{
    font-size: 36px;
    line-height: 30px;
    padding-bottom: 5px;
    font-weight: normal;
}
.clickBtn{
    width: 15%;
    height: 50px;
    border-radius: 50px;
    background-color: #303030;
    color: white;
    font-size: 20px;
}
.clickBtn:hover{
    background-color: #828282;
    color: white;
}
.motal{
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    z-index: 10;
    background-color: rgb(0,0,0);
    opacity: .6;
}